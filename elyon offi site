$(document).ready(function($) {
loadLatestNews('all', $('.news_top-banner'), $('.news_list-body'), $('.news_list-more'));
});

$('.news_list-tab .select-box select').on('change',function() {
if($(this).val() == 'ALL'){
location.href= "/news";
}else{
location.href= "/news?type="+$(this).val();
}
$(this).blur();
});

</script>
